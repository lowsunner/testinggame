---
import Layout from "../layouts/layout.astro";
---

<Layout title="The Math Hub">
	<iframe
		src="/pages/bg2.html"
		class="fixed w-full h-full -z-30 overflow-hidden"></iframe>

	<div
		id="hero"
		class="w-full min-h-screen relative flex items-center justify-center text-white overflow-hidden">
		<iframe
			src="/pages/bg.html"
			class="absolute w-full h-full -z-10 overflow-hidden"></iframe>
		<div class="text-area z-10 text-center px-4">
			<h1 class="ti text-6xl md:text-8xl z-10 font-bold tracking-tight">
				THE <span id="aurora">MATH</span> HUB
			</h1>
			<p
				class="subti text-xl md:text-2xl z-10 mt-6 max-w-3xl mx-auto text-gray-300 leading-relaxed">
				Cure your classroom boredom with 300+ epic unblocked games and
				experiences.
			</p>
			<button
				class="go play-b mt-8 px-10 py-4 text-white rounded-xl z-10 text-lg font-semibold">
				Let's Play!
			</button>
			<div
				class="visual w-full h-full absolute top-0 left-0 overflow-hidden">
				<div id="vis-1">
					<video autoplay loop muted playsinline class="vid">
						<source src="/videos/math1.mp4" type="video/mp4" />
						Your browser does not support the video tag.
					</video>
				</div>
				<div id="vis-2">
					<video autoplay loop muted playsinline class="vid">
						<source src="/videos/math2.mp4" type="video/mp4" />
						Your browser does not support the video tag.
					</video>
				</div>
			</div>
		</div>
	</div>

	<section id="featured" class="py-20 px-4 relative -mt-20">
		<div class="container mx-auto">
			<div class="flex items-center justify-between mb-10">
				<h2 class="text-3xl md:text-4xl font-bold text-white">
					Featured Games
				</h2>
			</div>

			<div
				class="games-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
				<div class="f-game-card group cursor-pointer">
					<div
						class="relative overflow-hidden rounded-lg bg-gray-800/80 backdrop-blur h-full justify-center align-middle">
						<div
							class="game-image aspect-[3/4] bg-gradient-to-br from-blue-600 to-cyan-600 flex items-center justify-center h-full">
							<img
								src="/cdn/imgs/drive_mad.webp"
								alt="Drive Mad"
								class="w-full h-full object-cover"
								onerror="this.style.display='none'"
							/>
						</div>
						<div
							class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
						</div>
						<div
							class="absolute bottom-0 left-0 right-0 p-4 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
							<h3 class="text-lg font-semibold text-white mb-2">
								Drive Mad
							</h3>
							<button
								class="dm-play w-full py-3 bg-gradient-to-r from-purple-500 to-indigo-600 rounded-xl hover:opacity-90 transition-all duration-300 font-semibold cursor-pointer shadow-lg hover:shadow-xl">
								Play Now
							</button>
						</div>
					</div>
				</div>
				<!-- ; -->
				<div class="f-game-card group cursor-pointer">
					<div
						class="relative overflow-hidden rounded-lg bg-gray-800/80 backdrop-blur h-full justify-center align-middle">
						<div
							class="game-image aspect-[3/4] bg-gradient-to-br from-blue-600 to-cyan-600 flex items-center justify-center h-full">
							<img
								src="/cdn/imgs/ragdollarchers.webp"
								alt="Ragdoll Archers"
								class="w-full h-full object-cover"
								onerror="this.style.display='none'"
							/>
						</div>
						<div
							class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
						</div>
						<div
							class="absolute bottom-0 left-0 right-0 p-4 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
							<h3 class="text-lg font-semibold text-white mb-2">
								Ragdoll Archers
							</h3>
							<button
								class="ra-play w-full py-3 bg-gradient-to-r from-purple-500 to-indigo-600 rounded-xl hover:opacity-90 transition-all duration-300 font-semibold cursor-pointer shadow-lg hover:shadow-xl">
								Play Now
							</button>
						</div>
					</div>
				</div>
				<!-- ; -->
				<div class="f-game-card group cursor-pointer">
					<div
						class="relative overflow-hidden rounded-lg bg-gray-800/80 backdrop-blur h-full justify-center align-middle">
						<div
							class="game-image aspect-[3/4] bg-gradient-to-br from-blue-600 to-cyan-600 flex items-center justify-center h-full">
							<img
								src="/img/g/hollow2.webp"
								alt="Hollow"
								class="w-full h-full object-cover"
								onerror="this.style.display='none'"
							/>
						</div>
						<div
							class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
						</div>
						<div
							class="absolute bottom-0 left-0 right-0 p-4 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
							<h3 class="text-lg font-semibold text-white mb-2">
								Hollow Knight
							</h3>
							<button
								class="tr-play w-full py-3 bg-gradient-to-r from-purple-500 to-indigo-600 rounded-xl hover:opacity-90 transition-all duration-300 font-semibold cursor-pointer shadow-lg hover:shadow-xl">
								Play Now
							</button>
						</div>
					</div>
				</div>
				<!-- ; -->
				<div class="f-game-card group cursor-pointer">
					<div
						class="relative overflow-hidden rounded-lg bg-gray-800/80 backdrop-blur h-full justify-center align-middle">
						<div
							class="game-image aspect-[3/4] bg-gradient-to-br from-blue-600 to-cyan-600 flex items-center justify-center h-full">
							<img
								src="/cdn/imgs/ovo-d.webp"
								alt="OVO Dimensions"
								class="w-full h-full object-cover"
								onerror="this.style.display='none'"
							/>
						</div>
						<div
							class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
						</div>
						<div
							class="absolute bottom-0 left-0 right-0 p-4 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
							<h3 class="text-lg font-semibold text-white mb-2">
								OVO Dimensions
							</h3>
							<button
								class="od-play w-full py-3 bg-gradient-to-r from-purple-500 to-indigo-600 rounded-xl hover:opacity-90 transition-all duration-300 font-semibold cursor-pointer shadow-lg hover:shadow-xl">
								Play Now
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section>
		<div class="container mx-auto px-4 py-12 text-left">
			<h2 class="text-3xl md:text-5xl font-bold text-white mb-6">
				About Us
			</h2>
			<p class="text-lg text-gray-300 mb-12">
				We're The Math Hub, your ultimate destination for unblocked
				games and experiences that make school actually fun. We aim to
				add more games and experiences every week to make your
				experience improve every visit. Our mission is to provide a ton
				of unblocked games to play at school, secure and fun. We have
				tons of unblocked games and experiences, so you can always find
				something new to play. Whether you're into action unblocked
				games, puzzles, strategy unblocked games, or just want to chill
				with some casual unblocked games, we've got you covered. Choose
				TMH!
			</p>
			<h2 class="text-3xl md:text-5xl font-bold text-white mb-6">
				Made For Students, By Students
			</h2>
			<p class="text-lg text-gray-300 mb-12">
				The Math Hub team is made up of students who know what it's like
				to be bored in class. We created this unique unblocked games
				site to give you a fun way to pass the time and make school more
				enjoyable. Dive into our collection of unblocked games and
				experiences, and let the fun begin!
			</p>
			<h2 class="text-3xl md:text-5xl font-bold text-white mb-6">
				Why Choose TMH?
			</h2>
			<p class="text-lg text-gray-300 mb-12">
				The Math Hub is the best choice for unblocked games and
				experiences because we focus on quality, variety, and user
				experience. We have tons of unique features to make sure you
				have the best time gaming and never get caught. We have tab
				cloaking, about:blank, and more to keep your sessions hidden
				from teachers. Also, The Math Hub unblocked games has tons of PC
				games and unique games that can be played on few other game
				sites!
			</p>
		</div>
		<button id="disc">Join the Discord for more links!</button>
	</section>
	<script src="../scripts/cloak"></script>
	<script src="../scripts/index"></script>
	<script src="../scripts/enhancements"></script>

	<link
		rel="stylesheet"
		href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
	/>
	<script lang="js">
		document
			.querySelector(".ra-play")
			.addEventListener("click", function () {
				window.location.href = "play/ragdollarchers/";
			});

		document
			.querySelector(".dm-play")
			.addEventListener("click", function () {
				window.location.href = "play/drive-mad/";
			});
		document
			.querySelector(".tr-play")
			.addEventListener("click", function () {
				window.location.href = "play/hollow-knight/";
			});
		document
			.querySelector(".od-play")
			.addEventListener("click", function () {
				window.location.href = "play/ovod/";
			});

		document.addEventListener("DOMContentLoaded", () => {
			window.addEventListener("scroll", () => {
				const scrolled = window.pageYOffset;
				const hero = document.querySelector("#hero");
				if (hero) {
					hero.style.transform = `translateY(${scrolled * 0.5}px)`;
				}
			});

			const observerOptions = {
				threshold: 0.1,
				rootMargin: "0px 0px -100px 0px",
			};

			const observer = new IntersectionObserver((entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						entry.target.classList.add("animate-in");
					}
				});
			}, observerOptions);

			const gameCards = document.querySelectorAll(".game-card");
			gameCards.forEach((card) => {
				observer.observe(card);
			});

			const playButtons = document.querySelectorAll(".game-card button");
			playButtons.forEach((button) => {
				button.addEventListener("click", (e) => {
					e.stopPropagation();
					const originalText = button.textContent;
					button.textContent = "Loading...";
					button.style.background =
						"linear-gradient(90deg, #10b981, #34d399)";

					setTimeout(() => {
						button.textContent = originalText;
						button.style.background = "";
					}, 1500);
				});
			});
		});

		document.getElementById("disc").onclick = function () {
			window.open("https://discord.gg/ejP36Bb44r", "_blank");
		};
	</script>
</Layout>
