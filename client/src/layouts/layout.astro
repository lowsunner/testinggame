---
import "../styles/global.css";

export interface Props {
	title: string;
}

const {title} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/svg+xml" href="/vite.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
	</head>

	<body>
		<header
			class="fixed z-100 w-full h-16 text-white flex items-center justify-between px-4">
			<div class="logo">
				<img
					src="/src/assets/logo.svg"
					alt="The Math Hub Logo"
					class="h-10"
				/>
			</div>
			<nav class="flex space-x-4">
				<a href="/games" class="text-white hover:text-blue-200">Games</a
				>
			</nav>
		</header>
		<slot />
	</body>
</html>
