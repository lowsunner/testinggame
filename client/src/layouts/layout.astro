---
import "../styles/global.css";

export interface Props {
	title: string;
}

const {title} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/svg+xml" href="/vite.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<!-- Google tag (gtag.js) -->
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-QEM4XL72TV"
		></script>
		<script lang="js">
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-QEM4XL72TV");
		</script>
	</head>

	<body>
		<header
			class="fixed z-100 w-full h-16 text-white flex items-center justify-between px-4">
			<div class="logo">
				<img
					src="/img/mathhub.svg"
					alt="The Math Hub Logo"
					class="h-10"
				/>
			</div>
			<nav class="flex space-x-4">
				<a
					href="/games"
					class="text-white hover:text-blue-200 transition duration-200"
					>Games</a
				>
				<a
					href="/settings"
					class="text-white hover:text-blue-200 transition duration-200"
					>Settings</a
				>
			</nav>
			<script lang="js">
				document
					.querySelector(".logo")
					.addEventListener("click", () => {
						window.location.href = "/";
					});
			</script>
		</header>
		<slot />
	</body>
</html>
